<div class="container">
<h1>Gimmie Da Booooga!</h1>

<div class = "row">
  <div class="col">
<h3>Devoured Burgers!</h3>

<ul id="devouredb">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col">
<h3>Create a Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name Your Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Has it already been eated?</label><br>
    <input type="radio" name="devoured" value="1" checked> Edible<br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

<div class="col">
<h3>Burgers that have not been eaten!</h3>

<ul id="uneaten">
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>